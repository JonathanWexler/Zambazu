       
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <div id="user_nav" class="nav pull-right">
          <% if current_user %>
          Welcome, <%= current_user.name %>! 
          You are logged in with <%= current_user.provider %><br>
          <%= link_to "Sign Out", signout_path %><br>
          <% else %>
          <%= link_to 'Sign in with Facebook', '/auth/facebook/' %> |
          <%= link_to "Sign in with Twitter", "/auth/twitter" %>  |
          <%= link_to "Sign in with Google+", "/auth/google_oauth2" %><br>
          <p>
            <strong>Don't use these services?</strong>
            <%= link_to "Create an account", "/auth/identity/register" %> or
            <%= link_to "login", "/auth/identity" %> with a password.
          </p> 
          <% end %>

        </div>

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <!-- Be sure to leave the brand out there if you want it shown -->
        <a class="brand" href="index">Zambazu</a>

        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse collapse">
          <!-- .nav, .navbar-search, .navbar-form, etc -->
          <ul class="nav">
            <li><%= link_to "Home", "index" %></li>
            <li><%= link_to "Posts", posts_path %></li>
            <li><%= link_to "Comments"%></li>
          </ul>
        </div>

      </div>
    </div>
  </div>